datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id               String   @id
  customerId       String
  deliveryPersonId String
  address          Json
  status           String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now()) @updatedAt

  OrderItems Json[]
}

model Item {
  id        String   @id
  name      String
  price     Float
  category  String
  sku       String
  isActive  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([isActive])
}
